{
  "name": "rulekit-mcp",
  "version": "0.1.0",
  "description": "Rulekit MCP: An MCP server for AI coding assistant rules across projects, tech stacks, and languages",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": "^24.12.0",
    "pnpm": "^10.28.2"
  },
  "scripts": {
    "start": "tsx --watch src/main.ts",
    "inspect": "pnpm exec mcp-inspector --config inspector.json",
    "validate": "tsx scripts/validate.ts",
    "check-context-size": "tsx scripts/check-context-size.ts",
    "measure-load-time": "tsx scripts/measure-load-time.ts",
    "lint:markdown:check": "markdownlint-cli2 \"rules/**/*.md\" \"README.md\"",
    "lint:markdown": "markdownlint-cli2 --fix \"rules/**/*.md\" \"README.md\"",
    "lint:check": "eslint . --max-warnings 0",
    "lint": "eslint . --fix --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format:check": "prettier --check .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@modelcontextprotocol/inspector": "^0.21.1",
    "@types/express": "^5.0.6",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.3.0",
    "markdownlint": "^0.40.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "express": "^5.2.1",
    "gray-matter": "^4.0.3",
    "mime-types": "^3.0.2",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "tsx": "^4.21.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  }
}
